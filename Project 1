//Sizeof
#include <iostream>
using namespace std;

int main()
{
    char a;
    int x;
    float d;
    double t;
    cout<<"Size of char: "<<sizeof(a)<<" byte"<<endl;
    cout<<"Size of int: "<<sizeof(x)<<" bytes"<<endl;
    cout<<"Size of float: "<<sizeof(d)<<" bytes"<<endl;
    cout<<"Size of double: "<<sizeof(t)<<" bytes"<<endl;
    return 0;
}


//Arithmatic Operator
#include <iostream>
using namespace std;

int main()
{
    double a,b;
    cout<<"Enter two numbers:";
    cin>>a;
    cin>>b;
    cout<<"\nProduct = "<<a*b;
    return 0;
}
